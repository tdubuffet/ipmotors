{% extends "::base.html.twig" %}

{% block body %}
<form action="{{ path('ip_motors_form_edit_update', { 'id': survey.id }) }}" method="post">

    <div>
         <label for="survey_name">Nom Enquête</label>
         <input type="text" value="{{ survey.name }}" name="survey_name"/>
    </div>

    <ul class="nav nav-tabs" style="margin-bottom: 15px;">
        <li class="active"><a href="#home" data-toggle="tab">Véhicule actuel</a></li>
        <li class=""><a href="#profile" data-toggle="tab">Futur Véhicule</a></li>
        <li class=""><a href="#mail" data-toggle="tab">Mail Notification</a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="home">
            <div class="jumbotron clearfix" >
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Modèle Sujet de l'enquète :</label>
                    <div class="col-lg-10">
                        <input type="text" name="actualVehiculName" value="{{ survey.actualVehiculName }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="pre-selected-options" class="col-lg-2 control-label">Points Forts du modèle :</label>
                    <div class="col-lg-10">
                        <div class="col-md-3"><p>Liste</p></div>
                        <div class="col-md-3"><p>Points Forts</p></div>
                        
                        <select id='pre-selected-options1' multiple='multiple' name="actual_strenghs_survey[]">
                            {% for object in strenghs %}
                                <option value='{{ object.id }}'  {% if actualStrenghs[object.id] is defined %} selected {% endif %}>{{ object.name }}</option>
                            {% endfor %}
                        </select></div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="profile">
            <div class="jumbotron clearfix" >
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Modèle Sujet de l'enquète :</label>
                    <div class="col-lg-10">
                        <input type="text" name="futurVehiculName" value="{{ survey.futurVehiculName }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="pre-selected-options" class="col-lg-2 control-label">Points Forts du modèle :</label>
                    <div class="col-lg-10">
                        <div class="col-md-3"><p>Liste</p></div>
                        <div class="col-md-3"><p>Points Forts</p></div>
                        <select id='pre-selected-options2' multiple='multiple' name="futur_strenghs_survey[]">
                            {% for object in strenghs %}
                                <option value='{{ object.id }}'  {% if futurStrenghs[object.id] is defined %} selected {% endif %}>{{ object.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div> 
        </div>
        <div class="tab-pane fade" id="mail">
            <div class="jumbotron clearfix" >
                <p>Pouet pouet.</p>
            </div>
        </div>
    </div>
    <input type="submit" value="enregistrer">
</form>

{% endblock %}