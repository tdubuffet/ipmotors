{% extends "::base.html.twig" %}

{% block body %}

<form action="{{ path('ip_motors_customer_homepage') }}" method="post">
<input type="text" name="seek"/><input type="submit" value="Rechercher"/>
</form>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Adresse</th>
            <th>Code Postal</th>
            <th>Ville</th>
            <th>Date naissance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for customer in customers %}
        <tr>
            <td>#</td>
            <td><a href="{{ path('ip_motors_customer_read', { 'id': customer.id }) }}">{{ customer.nom }}</a></td>
            <td>{{ customer.prenom }}</td>
            <td>{{ customer.adresse }}</td>
            <td>{{ customer.postal }}</td>
            <td>{{ customer.town }}</td>
            <td>{{ customer.dateNaissance|date('Y-m-d') }}</td>
            <td><a href="{{ path('ip_motors_customer_delete', { 'id': customer.id }) }}">X</a> 
                <a href="{{ path('ip_motors_customer_update', { 'id': customer.id }) }}">M</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}