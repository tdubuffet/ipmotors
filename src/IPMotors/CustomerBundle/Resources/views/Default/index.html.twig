{% extends "::base.html.twig" %}

{% block body %}
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Adresse</th>
            <th>Code Postal</th>
            <th>Ville</th>
            <th>Date naissance</th>
        </tr>
    </thead>
    <tbody>
    {% for customer in customers %}
        <tr>
            <td>#</td>
            <td><a href="{{ path('ip_motors_customer_read', { 'id': customer.id }) }}">{{ customer.nom }}</a></td>
            <td>{{ customer.prenom }}</td>
            <td>{{ customer.adresse }}</td>
            <td>{{ customer.postal }}</td>
            <td>{{ customer.town }}</td>
            <td>{{ customer.dateNaissance|date('Y-m-d') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}