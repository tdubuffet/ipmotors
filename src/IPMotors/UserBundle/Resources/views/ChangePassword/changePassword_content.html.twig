{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password well bs-component col-lg-8 col-lg-offset-2">
    <fieldset>
        <legend>Modifier mon mot de passe</legend>
        <div class="form-group">
            <label for="current_password" class="col-lg-3 control-label">Mot de passe actuel:</label>
            <div class="col-lg-8">
                {{ form_widget(form.current_password, { 'attr': {"class":"form-control"}} ) }}
            </div>
        </div>
        <div class="form-group">
            <label for="plainPassword" class="col-lg-3 control-label">Mot de passe actuel:</label>
            <div class="col-lg-8">
                {{ form_widget(form.plainPassword.first, { 'attr': {"class":"form-control"}} ) }}
            </div>
        </div>
        <div class="form-group">
            <label for="plainPassword" class="col-lg-3 control-label">Mot de passe actuel:</label>
            <div class="col-lg-8">
                {{ form_widget(form.plainPassword.second, { 'attr': {"class":"form-control"}} ) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-3">
              <a href="{{ path('fos_user_profile_show') }}" class="btn btn-default">Annuler</a>
              <input type="submit" class="btn btn-primary" value='{{ 'change_password.submit'|trans }}'/>
            </div>
        </div>
        {{ form_widget(form) }}
    </fieldset>
</form>
